{

	uint32_t tempreg = 0;

	//1.Configure the device mode
	tempreg |= pSPIHandle->SPIConfig.SPI_DeviceMode << 2 ;

	//2.Configure the bus config

	if(pSPIHandle->SPIConfig.SPI_BusConfig == SPI_BUS)

}
